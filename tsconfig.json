{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "outDir": "dist",
    "rootDir": ".",
    "sourceMap": true,
    "lib": ["esnext", "dom"],
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noEmitOnError": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "removeComments": true,
    "strictFunctionTypes": true,
    "strict": true
    // Recommendations from "Using Babel with TypeScript" in official docs
    //"declaration": true,
    //"emitDeclarationOnly": true,
    //"isolatedModules": true
  }
}
